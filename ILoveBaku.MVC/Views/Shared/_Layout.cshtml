    <script src="https://www.google.com/recaptcha/api.js?render=@Configuration["Web:ReCaptcha:SiteKey"]"></script>
    <script>
        if ($("input[name='captcha']").length > 0) {
             grecaptcha.ready(function() {
              window.grecaptcha.execute('@Configuration["Web:ReCaptcha:SiteKey"]', { action: 'home' }).then(function (token) {
                  $("#captchaInput").val(token);
              });

                 window.grecaptcha.execute('@Configuration["Web:ReCaptcha:SiteKey"]', { action: 'home' }).then(function (token) {
                  $("#captchaInputRegister").val(token);
              });
             });
        }

    </script>
    <script>
        $(document).ready(function () {
            if ($("#newPassword").hasClass("show")) {
                $("#newPassword").modal("show");
            }
            $("#reset-password-button").click(function () {
                if ($("#reset-password-email").val() != "") {
                    $.ajax({
                        url: "/account/sendresetpasswordemail/?email=" + $("#reset-password-email").val(),
                        dataType: "json",
                        type: "get",
                        success: function (res) {
                            if (res.status == 200) {
                                alert("gonderildi");
                            }
                            else {
                                if (res.errors != null) {
                                    for (var error in res.errors) {
                                        alert(res.errors[error]);
                                    }
                                }
                            }
                        }
                    })
                }
            });

            $("#new-password-button").click(function () {
                var formData = new FormData();
                formData.append("Password", $("#new-password").val());
                formData.append("ConfirmPassword", $("#confirm-new-password").val());

                $.ajax({
                    url: "/account/resetPassword",
                    data: formData,
                    type: "post",
                    cache: false,
                    contentType: false,
                    processData: false,
                    success: function (res) {
                        if (res.status == 200) {
                            alert("Şifrə uğurla yeniləndi.");
                        }
                        else {
                            alert("Xəta baş verdi");
                        }
                    }
                })
            })
        })
    </script>
