@model SearchVM
<div class="black-box search-box">
    <div class="container-fluid d-block">
        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-12">
                    <div class="filter-search">
                        <input id="search" type="search">
                    </div>
                </div>
            </div>
        </div>
        <div class="row d-flex search-categories px-md-5 px-3 mt-4 justify-content-between">
            @foreach (var category in Model.Categories)
            {
                <div class="col-md-2 col-4 p-1">
                    <a data-categoryid="@category.Id" data-categoryName="@category.Title">
                        <img src="/uploads/categories/@category.Svg" />
                        <p>@category.Name</p>
                    </a>
                </div>
            }
        </div>
        <div id="searchedProducts" class="d-flex px-md-4 flex-wrap justify-content-start">
            @foreach (ProductStockDto product in Model.Products)
            {
                <div class="search-item">
                    <a asp-controller="Product" asp-action="Details" asp-route-productName="@product.RouteName">
                        <div class="img-scale img-scale-search">
                            <img src="@product.Image" alt="product">
                        </div>
                        <div class="d-flex justify-content-between align-items-center pt-2">
                            <p>@product.Name</p>
                            <p><b>@product.Price.ToString("#,##0.00") <sup><i class="azn">M</i></sup></b></p>
                        </div>
                    </a>
                </div>
            }
        </div>
        <div class="form-group mx-4 px-2">
            <a asp-controller="Product" asp-action="List" class="btn btn-category btn-w">@Localizer["Bütün kateqoriyaları aç"]</a>
        </div>
    </div>
</div>